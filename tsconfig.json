{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ES6"
    ],
    "jsx": "react-native",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@routes/*":["./src/routes/*"],
      "@screens/*":["./src/screens/*"],
      "@services/*":["./src/services/*"],
      "@components/*":["./src/components/*"],
      "@styles/*":["./src/styles/*"],
      "@interface/*":["./src/interface/*"],
    },
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["src/interface","./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
